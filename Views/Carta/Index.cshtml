@model IEnumerable<Postagem.Models.Carta>

@{

      ViewData["Title"] = "Listagem de Cartas";

}

<h2>Cartas</h2>

<p><a asp-action = "Criar">Novo registro de carta</a></p>



<table class = "table">

        <thead>

              <tr>

                  <th>

                        @Html.DisplayNameFor(model  => model.Id)

                  </th>

                  <th>

                        @Html.DisplayNameFor(model  => model.Tema)

                  </th>

                  <th>

                        @Html.DisplayNameFor(model  => model.Base)

                  </th>

                  

                  <th></th>

            </tr>

            

        </thead>

        <tbody>

              @foreach (var item in Model)
              {
                
                      <tr>

                          <td>

                                @Html.DisplayFor(model  => item.Id)

                         <td>

                                 @Html.DisplayFor(model  => item.Tema)   

                         </td>

                         <td>

                                @Html.DisplayFor(model  => item.Base)

                                 

                         </td>

                         
                          </td>

                          <td>

                                <a asp-action = "Editar" asp-route-id = "@item.Id">Editar</a> |
                                 <a asp-action = "Detalhes" asp-route-id = "@item.Id">Detalhes</a> |
                                  <a asp-action = "Deletar" asp-route-id = "@item.Id">Deletar</a> 

                          </td>

                      </tr>


              }

        </tbody>

</table>

  

  